{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "auth-hooks": ["packages/auth-hooks/src/index.ts"]
    }
  },
  "include": ["packages", "apps"],
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.mjs",
    "**/*.config.*",
    "eslint.config.*",
    "postcss.config.*",
    "tailwind.config.*",
    "next-sitemap.config.*"
  ]
}
